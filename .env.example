# Maestro Intelligence Layer - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================
# Anthropic API (Required for AI features)
# ============================================
# Get your API key at: https://console.anthropic.com/
# This is used for AI-powered task generation and agent intelligence

ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================
# GitHub Integration (Optional)
# ============================================
# Required for agents to create branches, commits, and pull requests
# Generate a token at: https://github.com/settings/tokens
# Required scopes: repo (full control of private repositories)

GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# GitHub webhook secret for signature verification
# Generate a random secret: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# ============================================
# Webhook Infrastructure (Required for distributed agents)
# ============================================
# Secret for signing webhooks sent to agents
# MUST match the secret configured in your deployed agents
# Generate: openssl rand -hex 32

WEBHOOK_SECRET=your-webhook-secret-key
AGENT_WEBHOOK_SECRET=your-webhook-secret-key

# ============================================
# Integration Settings (Optional)
# ============================================

# Health check interval in milliseconds (default: 300000 = 5 minutes)
HEALTH_CHECK_INTERVAL=300000

# Auto-cleanup old messages (in days, default: 30)
MESSAGE_CLEANUP_DAYS=30

# Auto-cleanup old knowledge entries (in days, default: 90)
KNOWLEDGE_CLEANUP_DAYS=90

# ============================================
# Development Settings (Optional)
# ============================================

# Enable debug logging
DEBUG=false

# Node environment
NODE_ENV=development
